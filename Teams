        function getInitials(name) {
            return name.split(' ').map(word => word[0]).join('').toUpperCase();
        }

        function displayTeams(filteredTeams = teams) {
            const container = document.getElementById("teamContainer");
            container.innerHTML = ''; // Clear previous results

            filteredTeams.forEach((team, index) => {
                const card = document.createElement('div');
                card.className = 'card';
                card.style.animation = `fadeIn 0.5s ease forwards ${index * 0.2}s`;

                const membersList = team.members.split(', ').map(member => `
                    <div class="member-card">
                        <div class="member-avatar">${getInitials(member)}</div>
                        <div class="member-name">${member}</div>
                    </div>
                `).join('');

                card.innerHTML = `
                    <h3 class="team-name">${team.team}</h3>
                    <div class="leader-section">
                        <span class="leader-tag">Team Leader</span>
                        <div class="leader-name">${team.leader}</div>
                    </div>
                    <div class="project-section">
                        <span class="project-tag">Project</span>
                        <div class="project-name">${team.project}</div>
                    </div>
                    <div class="members-title">Team Members</div>
                    <div class="members-grid">
                        ${membersList}
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function searchTeams() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            
            const filteredTeams = teams.filter(team => 
                team.team.toLowerCase().includes(searchInput) ||
                team.project.toLowerCase().includes(searchInput) ||
                team.leader.toLowerCase().includes(searchInput) ||
                team.members.toLowerCase().includes(searchInput)
            );

            displayTeams(filteredTeams);
        }
        displayTeams();

        document.getElementById('searchInput').addEventListener('input', searchTeams);
    </script>
